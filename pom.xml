<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>lane</artifactId>
        <groupId>edu.stanford.irt</groupId>
        <version>2</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>edu.stanford.irt</groupId>
    <artifactId>laneweb</artifactId>
    <packaging>war</packaging>
    <name>Lane Library Website</name>
    <version>1.9.0-SNAPSHOT</version>
    <description>The Lane Library web application built with Cocoon</description>
    <url>http://lane.stanford.edu/index.html</url>
    <inceptionYear>2002</inceptionYear>
    <developers>
        <developer>
            <id>ceyates</id>
            <name>Charles Yates</name>
            <email>ceyates@stanford.edu</email>
            <organization>IRT Systems Development</organization>
        </developer>
        <developer>
            <id>tpod</id>
            <name>Tanya Podchiyska</name>
            <email>tpod@stanford.edu</email>
            <organization>IRT Systems Development</organization>
        </developer>
        <developer>
            <id>ryanmax</id>
            <name>Ryan Max Steinberg</name>
            <email>ryanmax@stanford.edu</email>
            <organization>Lane Medical Library</organization>
        </developer>
        <developer>
            <id>alainb</id>
            <name>Alain Broussard</name>
            <email>alainb@stanford.edu</email>
            <organization>IRT Systems Development</organization>
        </developer>
    </developers>
    <scm>
        <developerConnection>scm:svn:https://irt-svn.stanford.edu/repos/irt/lane/laneweb/trunk</developerConnection>
    </scm>
    <build>
        <defaultGoal>package</defaultGoal>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <webappDirectory>target/laneweb</webappDirectory>
                    <webResources>
                        <resource>
                            <directory>src/main/webapp</directory>
                            <filtering>true</filtering>
                        </resource>
                    </webResources>
                </configuration>
            </plugin>
            <plugin>
                <groupId>net.sf.alchim</groupId>
                <artifactId>yuicompressor-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>compress</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <webappDirectory>target/laneweb</webappDirectory>
                    <excludes>
                        <exclude>**/swfobject.js</exclude>
                    </excludes>
                    <aggregations>
                        <aggregation>
                            <removeIncluded>true</removeIncluded>
                            <output>target/laneweb/resources/css/irt3/irt3.css</output>
                            <includes>
                                <include>*-min.css</include>
                            </includes>
                        </aggregation>
                        <aggregation>
                            <removeIncluded>true</removeIncluded>
                            <output>target/laneweb/javascript/lane-all.js</output>
                            <includes>
                                <include>lane-min.js</include>
                                <include>lane-search-min.js</include>
                                <include>lane-tracking-min.js</include>
                                <include>lane-webtrends-min.js</include>
                                <include>lane-google-min.js</include>
                                <include>lane-eresources-min.js</include>
                                <include>lane-spellcheck-min.js</include>
                                <include>lane-searchtabs-min.js</include>
                                <include>lane-findit-min.js</include>
                                <include>lane-querymap-min.js</include>
                                <include>lane-popin-min.js</include>
                                <include>lane-metasearch-min.js</include>
                                <include>lane-search-history-min.js</include>
                                <include>lane-tooltips-min.js</include>
                                <include>lane-popup-min.js</include>
                                <include>lane-ie-min.js</include>
                                <include>lane-forms-min.js</include>
                                <include>lane-bassett-min.js</include>
                            </includes>
                        </aggregation>
                    </aggregations>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-site-plugin</artifactId>
                <configuration>
                    <outputEncoding>UTF-8</outputEncoding>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <reporting>
        <plugins>
            <plugin>
                <groupId>gr.abiss.mvn.plugins</groupId>
                <artifactId>maven-jstools-plugin</artifactId>
                <inherited>false</inherited>
                <configuration>
                    <jsDir>src/main/webapp/javascript</jsDir>
                    <excludes>**/swfobject.js</excludes>
                </configuration>
                <reportSets>
                    <reportSet>
                        <reports>
                            <report>jslint</report>
                            <report>jsdoc</report>
                        </reports>
                    </reportSet>
                </reportSets>
            </plugin>
        </plugins>
    </reporting>
    <dependencies>
        <dependency>
            <artifactId>irt-cocoon</artifactId>
            <groupId>edu.stanford.irt</groupId>
            <version>1.0.0</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>org.apache.cocoon</groupId>
            <artifactId>cocoon-core</artifactId>
            <version>2.2.0</version>
            <scope>compile</scope>
            <exclusions>
                <exclusion>
                    <artifactId>xalan</artifactId>
                    <groupId>xalan</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>js</artifactId>
                    <groupId>rhino</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>commons-jexl</artifactId>
                    <groupId>commons-jexl</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>xml-apis</artifactId>
                    <groupId>xml-apis</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>xercesImpl</artifactId>
                    <groupId>xerces</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>junit</artifactId>
                    <groupId>junit</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>excalibur-instrument-api</artifactId>
                    <groupId>org.apache.excalibur.containerkit</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>concurrent</artifactId>
                    <groupId>concurrent</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.4</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>edu.stanford.irt.search</groupId>
            <artifactId>search-spring</artifactId>
            <version>1.4.27</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.5</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>edu.stanford.irt</groupId>
            <artifactId>eresources-impl</artifactId>
            <version>1.3.2</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>edu.stanford.irt</groupId>
            <artifactId>querymap</artifactId>
            <version>1.1.1</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>edu.stanford.irt</groupId>
            <artifactId>irt</artifactId>
            <version>1.5.1-jdk1.5.0</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>edu.stanford.irt</groupId>
            <artifactId>spellcheck</artifactId>
            <version>1.2.2</version>
            <scope>compile</scope>
            <exclusions>
                <exclusion>
                    <groupId>com.swabunga.spell</groupId>
                    <artifactId>jazzy-core</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.easymock</groupId>
            <artifactId>easymockclassextension</artifactId>
            <version>2.3</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>net.sf.saxon</groupId>
            <artifactId>saxon</artifactId>
            <version>9.1.0.2</version>
            <scope>runtime</scope>
        </dependency>
    </dependencies>
</project>
