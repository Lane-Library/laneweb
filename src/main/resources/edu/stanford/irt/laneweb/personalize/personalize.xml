<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    
    <bean name="edu.stanford.irt.laneweb.servlet.binding.DataBinder/bookmark"
        class="edu.stanford.irt.laneweb.personalize.BookmarkDataBinder">
        <property name="bookmarkDAO" ref="edu.stanford.irt.laneweb.personalize.BookmarkDAO"/>
    </bean>
    
    <bean name="edu.stanford.irt.laneweb.servlet.binding.DataBinder/history"
        class="edu.stanford.irt.laneweb.personalize.HistoryDataBinder">
        <property name="historyDAO">
            <bean class="edu.stanford.irt.laneweb.personalize.DummyHistoryDAO"/>
        </property>
    </bean>
    
    <bean name="org.apache.cocoon.generation.Generator/bookmark"
        class="edu.stanford.irt.laneweb.personalize.BookmarkGenerator"
        parent="edu.stanford.irt.laneweb.cocoon.AbstractMarshallingGenerator"/>
    
    
    <bean name="org.apache.cocoon.generation.Generator/history"
        class="edu.stanford.irt.laneweb.personalize.HistoryGenerator"
        parent="edu.stanford.irt.laneweb.cocoon.AbstractMarshallingGenerator"/>
    
    <bean name="org.apache.cocoon.selection.Selector/action"
        class="edu.stanford.irt.laneweb.personalize.ActionSelector"/>
    
    <bean name="edu.stanford.irt.laneweb.personalize.BookmarkDAO"
        class="edu.stanford.irt.laneweb.personalize.SQLBookmarkDAO">
        <constructor-arg ref="javax.sql.DataSource/eresources"/>
    </bean>
    
</beans>
