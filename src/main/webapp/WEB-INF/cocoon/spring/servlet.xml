<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="javax.servlet.ServletContext"
        class="org.apache.cocoon.spring.configurator.impl.ServletContextFactoryBean"/>

    <bean name="org.apache.cocoon.processing.ProcessInfoProvider"
        class="org.apache.cocoon.processing.impl.ProcessInfoProviderImpl">
        <property name="servletContext" ref="javax.servlet.ServletContext"/>
    </bean>

    <bean id="org.apache.cocoon.configuration.Settings" class="edu.stanford.irt.laneweb.cocoon.Settings">
        <property name="tempDir">
            <bean class="org.springframework.web.context.support.ServletContextAttributeFactoryBean">
                <property name="attributeName" value="javax.servlet.context.tempdir"/>
            </bean>
        </property>
    </bean>
    
    <bean id="org.apache.cocoon.el.objectmodel.ObjectModelProvider"
        class="edu.stanford.irt.laneweb.servlet.RequestAttributeObjectModelProvider"/>

    <bean id="edu.stanford.irt.laneweb.servlet.ModelAugmentingRequestHandler"
        class="edu.stanford.irt.laneweb.servlet.ModelAugmentingRequestHandler"
        parent="edu.stanford.irt.laneweb.servlet.SitemapRequestHandler">
        <property name="proxyLinks" ref="edu.stanford.irt.laneweb.servlet.ProxyLinks"/>
        <property name="templateChooser" ref="edu.stanford.irt.laneweb.servlet.TemplateChooser"/>
        <property name="LDAPDataAccess" ref="edu.stanford.irt.laneweb.ldap.LDAPDataAccess"/>
        <property name="ezproxyKey">
            <!-- TODO: get this from servlet context . . .-->
            <bean class="org.springframework.jndi.JndiObjectFactoryBean">
                <property name="jndiName" value="java:comp/env/ezproxy-key"/>
            </bean>
        </property>
    </bean>
    
    <bean id="edu.stanford.irt.laneweb.servlet.SitemapRequestHandler"
        class="edu.stanford.irt.laneweb.servlet.SitemapRequestHandler">
        <property name="methodsNotAllowed">
            <set>
                <value>OPTIONS</value>
                <value>PROPFIND</value>
            </set>
        </property>
        <property name="redirectMap">
            <map>
                <entry key="(.*)/" value="$1/index.html"/>
                <entry key="(.*)/liaisons/index.html"
                    value="$1/contacts/index.html?loadTab=liaisons"/>
                <entry key="(.*)/classes/index.html" value="$1/services/workshops/laneclasses.html"/>
                <entry key="(.*)/clinician/index.html" value="$1/portals/clinical.html"/>
            </map>
        </property>
        <property name="servletContext" ref="javax.servlet.ServletContext"/>
        <property name="processor" ref="org.apache.cocoon.Processor"/>
    </bean>

    <bean id="edu.stanford.irt.laneweb.servlet.ProxyLinks"
        class="edu.stanford.irt.laneweb.servlet.ProxyLinks">
        <property name="proxyRegex">
            <list>
                <!-- VPN 171.65.16.0 - 171.65.31.255 -->
                <value>^171\.66\.(?:1[6-9]|2[0-9]|3[0-1])\.\S+</value>
                <!-- hospital 171.65.44.0 - 171.65.44.255 -->
                <value>^171\.65\.44\.\S+</value>
                <!-- hospital 171.65.125.0 - 171.65.125.255 -->
                <value>^171\.65\.125\.\S+</value>
                <!-- hospital 171.65.128.0 - 171.65.199.255 -->
                <value>^171\.65\.1(?:2[8-9]|[3-9][0-9])\.\S+</value>
                <!-- hospital 171.65.200.0 - 171.65.255.255 -->
                <value>^171\.65\.2[0-5][0-9]\.\S+</value>
            </list>
        </property>
        <property name="noProxyRegex">
            <list>
                <value>^171\.6[4-7]\.\S+</value>
                <!-- campus wireless 10.32.0.0 through 10.33.255.255 -->
                <value>^10\.3[2-3]\.\S+</value>
                <!-- library wireless 10.39.32.1 through 10.39.47.255 -->
                <value>^10\.39\.(?:3[2-9]|4[0-7])\.\S+</value>
            </list>
        </property>
    </bean>

    <bean id="edu.stanford.irt.laneweb.servlet.TemplateChooser"
        class="edu.stanford.irt.laneweb.servlet.TemplateChooser">
        <constructor-arg value="template"/>
        <constructor-arg>
            <!-- TODO: this should be an ordered map if more than one entry -->
            <map>
                <entry key="^(?:/\w+|)/bassett/raw/bassettLargerView.html" value="bassettLargerView"
                />
            </map>
        </constructor-arg>
    </bean>
    
</beans>
