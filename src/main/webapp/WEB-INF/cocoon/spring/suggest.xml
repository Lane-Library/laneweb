<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    
    
    <bean id="edu.stanford.irt.suggest.EresourceSuggestionManager"
        class="edu.stanford.irt.suggest.EresourceSuggestionManager">
        <property name="dataSource" ref="javax.sql.DataSource/eresources"/>
    </bean>
    
    <bean id="edu.stanford.irt.suggest.HistorySuggestionManager"
        class="edu.stanford.irt.suggest.HistorySuggestionManager">
        <property name="dataSource" ref="javax.sql.DataSource/eresources"/>
    </bean>
    
    <bean id="edu.stanford.irt.suggest.MeshSuggestionManager"
        class="edu.stanford.irt.suggest.MeshSuggestionManager"/>
    
    <bean name="org.apache.cocoon.reading.Reader/suggest"
        class="edu.stanford.irt.laneweb.suggest.SuggestionReader"
        scope="prototype">
        <property name="eresourceSuggestionManager"
            ref="edu.stanford.irt.suggest.EresourceSuggestionManager"/>
        <property name="historySuggestionManager"
            ref="edu.stanford.irt.suggest.HistorySuggestionManager"/>
        <property name="meshSuggestionManager"
            ref="edu.stanford.irt.suggest.MeshSuggestionManager"/>
    </bean>
    
    <bean name="org.apache.cocoon.reading.Reader/extensions-suggest"
        class="edu.stanford.irt.laneweb.suggest.ExtensionsSuggestReader"
        scope="prototype">
        <property name="eresourceSuggestionManager"
            ref="edu.stanford.irt.suggest.EresourceSuggestionManager"/>
    </bean>
    
</beans>
