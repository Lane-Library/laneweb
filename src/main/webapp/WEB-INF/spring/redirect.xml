<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="edu.stanford.irt.laneweb.servlet.redirect.RedirectProcessor"
        class="edu.stanford.irt.laneweb.servlet.redirect.CompositeRedirectProcessor">
        <property name="redirectProcessors">
            <list>
                <bean class="edu.stanford.irt.laneweb.servlet.redirect.DefaultRedirectProcessor">
                    <property name="redirectMap">
                        <map>
                            <!-- had to add NOT question mark because some proxy urls end with slash -->
                            <entry key="((?!.*\?.*).*)/" value="$1/index.html"/>
                            <entry key="/classes/index\.html" value="/classes-consult/laneclasses.html"/>
                            <entry key="/clinician/index\.html" value="/portals/clinical.html"/>
                            <entry key="/index\.html\?template=shc(.*)" value="/index\.html\?sourceid=shc$1"/>
                        </map>
                    </property>
                </bean>
                <!-- newpage redirects, remove sometime in November -->
                <bean class="edu.stanford.irt.laneweb.servlet.redirect.DefaultRedirectProcessor">
                    <property name="redirectMap">
                        <map>
                            <entry key="/services/index\.html" value="/newpage.html?page=/about/index.html"/>
                            <entry key="/(?:content|rss)/page2rss\?page=/services/workshops/laneclasses\.html" value="/newpage.html?page=/rss/page2rss?page=/classes-consult/laneclasses\.html"/>
                            <entry key="/services/workshops/laneclasses\.html" value="/newpage.html?page=/classes-consult/laneclasses.html"/>
                            <entry key="/howto/index\.html\?id=48" value="/newpage.html?page=/about/hours-directions.html"/>
                            <entry key="/contacts/index\.html\?loadTab=askus" value="/newpage.html?page=/help/ask-us.html"/>
                            <entry key="/contacts/(.*)" value="/newpage.html?page=/about/contacts/$1"/>
                            <entry key="/online/(.*)browse\.html(.*)" value="/newpage.html?page=/biomed-resources/$1.html$2"/>
                            <entry key="/online/(.*)" value="/newpage.html?page=/biomed-resources/$1"/>
                            <entry key="/portals/bassett/(.*)" value="/newpage.html?page=/biomed-resources/bassett/$1"/>
                            <entry key="/bassett/(.*)" value="/newpage.html?page=/biomed-resources/bassett/$1"/>
                            <entry key="/portals/history/index\.html" value="/newpage.html?page=/med-history/index.html"/>
                            <entry key="/(?:content|rss)/page2rss\?page=/portals/emgrandrounds\.html" value="/newpage.html?page=/rss/page2rss?page=/biomed-resources/emgrandrounds\.html"/>
                            <entry key="/(?:content|rss)/page2rss\?page=/portals/medgrandrounds\.html" value="/newpage.html?page=/rss/page2rss?page=/biomed-resources/medgrandrounds\.html"/>
                            <entry key="/(?:content|rss)/page2rss\?page=/portals/pedsgrandrounds\.html" value="/newpage.html?page=/rss/page2rss?page=/biomed-resources/pedsgrandrounds\.html"/>
                            <entry key="/rss/services/tools/highly-accessed-articles\.xml" value="/newpage.html?page=/rss/highly-accessed-articles.xml"/>
                            <entry key="/portals/emgrandrounds\.html" value="/newpage.html?page=/biomed-resources/emgrandrounds.html"/>
                            <entry key="/portals/medgrandrounds\.html" value="/newpage.html?page=/biomed-resources/medgrandrounds.html"/>
                            <entry key="/portals/pedsgrandrounds\.html" value="/newpage.html?page=/biomed-resources/pedsgrandrounds.html"/>
                            <entry key="/search\.html\?source=all&amp;(.*)" value="/newpage.html?page=/search\.html\?source=all-all%26$1"/>
                            <entry key="/search\.html\?source=(ej|database|book|software|video|cc|lanesite)&amp;(.*)" value="/newpage.html?page=/search\.html\?source=catalog-$1%26$2"/>
                            <entry key="/search\.html\?source=(clinical|history)&amp;(.*)" value="/newpage.html?page=/search\.html\?source=$1-all%26$2"/>
                            <entry key="/search\.html\?source=research&amp;(.*)" value="/newpage.html?page=/search\.html\?source=bioresearch-all%26$1"/>
                            <entry key="/search\.html\?source=peds&amp;(.*)" value="/newpage.html?page=/portals\/peds\.html\?$1"/>
                            <entry key="/local/antibiogram/index\.html" value="/newpage.html?page=/biomed-resources/antibiograms-shc.html"/>
                            <entry key="/local/antibiogramLPCH/index\.html" value="/newpage.html?page=/biomed-resources/antibiograms-lpch.html"/>
                            <entry key="/local/(antibiogram(?:LPCH)?)/(.*)" value="/newpage.html?page=/biomed-resources/$1/$2"/>
                        </map>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
</beans>
