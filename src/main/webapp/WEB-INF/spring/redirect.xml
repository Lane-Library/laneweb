<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="edu.stanford.irt.laneweb.servlet.redirect.RedirectProcessor"
        class="edu.stanford.irt.laneweb.servlet.redirect.CompositeRedirectProcessor">
        <property name="redirectProcessors">
            <list>
                <bean class="edu.stanford.irt.laneweb.servlet.redirect.TrailingSlashRedirectProcessor"/>
                <bean class="edu.stanford.irt.laneweb.servlet.redirect.DefaultRedirectProcessor">
                    <property name="redirectMap">
                        <map>
                            <entry key="/classes/index\.html" value="/classes-consult/laneclasses.html"/>
                            <entry key="/clinician/index\.html" value="/portals/clinical.html"/>
                            <entry key="/index\.html\?template=shc(.*)" value="/index\.html\?sourceid=shc$1"/>
                            <entry key="/lksc-print(?:.*)" value="/help/lksc-print.html"/>
                            <entry key="/classes" value="/classes-consult/laneclasses.html"/>
                            <entry key="/clinician" value="/portals/clinical.html"/>
                        </map>
                    </property>
                </bean>
                <!-- newpage redirects, remove sometime in November -->
                <bean class="edu.stanford.irt.laneweb.servlet.redirect.NewPageRedirectProcessor">
                    <property name="redirectMap">
                        <map>
                            <entry key="/online/(.*)" value="/newpage.html?page=/biomed-resources/$1"/>
                            <entry key="/portals/bassett/(.*)" value="/newpage.html?page=/biomed-resources/bassett/$1"/>
                            <entry key="/bassett/(.*)" value="/newpage.html?page=/biomed-resources/bassett/$1"/>
                            <entry key="/search\.html\?source=all&amp;(.*)" value="/newpage.html?page=/search\.html\?source=all-all%26$1"/>
                            <entry key="/search\.html\?source=(ej|database|book|software|video|cc|lanesite)&amp;(.*)" value="/newpage.html?page=/search\.html\?source=catalog-$1%26$2"/>
                            <entry key="/search\.html\?source=(clinical|history)&amp;(.*)" value="/newpage.html?page=/search\.html\?source=$1-all%26$2"/>
                            <entry key="/search\.html\?source=research&amp;(.*)" value="/newpage.html?page=/search\.html\?source=bioresearch-all%26$1"/>
                            <entry key="/search\.html\?source=peds&amp;(.*)" value="/newpage.html?page=/portals\/peds\.html\?$1"/>
                            <entry key="/local/antibiogram/index\.html(.*)" value="/newpage.html?page=/biomed-resources/antibiograms-shc.html$1"/>
                            <entry key="/local/antibiogramLPCH/index\.html(.*)" value="/newpage.html?page=/biomed-resources/antibiograms-lpch.html$1"/>
                            <entry key="/local/(antibiogram(?:LPCH)?)/(.*)" value="/newpage.html?page=/biomed-resources/$1/$2"/>
                            <entry key="/m" value="/m/index\.html"/>
                        </map>
                    </property>
                </bean>
                <bean class="edu.stanford.irt.laneweb.servlet.redirect.SHCRedirectProcessor">
                    <property name="redirectMap">
                        <map>
                            <entry key="/shc/anesthesia.html(?:\??)(.*)" value="/portals/anesthesia.html?sourceid=shc&amp;source=/portals/anesthesia.html&amp;$1"/>
                            <entry key="/shc/cardiology.html(?:\??)(.*)" value="/portals/cardiology.html?sourceid=shc&amp;source=/portals/cardiology.html&amp;$1"/>
                            <entry key="/shc/clinical.html(?:\??)(.*)" value="/search.html?sourceid=shc&amp;source=clinical&amp;$1"/>
                            <entry key="/shc/ear-nose-throat.html(?:\??)(.*)" value="/search.html?sourceid=shc&amp;source=clinical&amp;$1"/>
                            <entry key="/shc/emergency.html(?:\??)(.*)" value="/search.html?sourceid=shc&amp;source=clinical&amp;$1"/>
                            <entry key="/shc/gastroenterology.html(?:\??)(.*)" value="/portals/internal-medicine.html?sourceid=shc&amp;source=/portals/internal-medicine.html&amp;$1"/>
                            <entry key="/shc/hematology.html(?:\??)(.*)" value="/portals/hematology.html?sourceid=shc&amp;$1"/>
                            <entry key="/shc/hepatology.html(?:\??)(.*)" value="/portals/internal-medicine.html?sourceid=shc&amp;source=/portals/internal-medicine.html&amp;$1"/>
                            <entry key="/shc/icu.html(?:\??)(.*)" value="/portals/internal-medicine.html?sourceid=shc&amp;source=/portals/internal-medicine.html&amp;$1"/>
                            <entry key="/shc/infectious-disease.html(?:\??)(.*)" value="/portals/internal-medicine.html?sourceid=shc&amp;source=/portals/internal-medicine.html&amp;$1"/>
                            <entry key="/shc/internal-medicine.html(?:\??)(.*)" value="/portals/internal-medicine.html?sourceid=shc&amp;source=/portals/internal-medicine.html&amp;$1"/>
                            <entry key="/shc/neurology.html(?:\??)(.*)" value="/search.html?sourceid=shc&amp;source=clinical&amp;$1"/>
                            <entry key="/shc/ob-gyn.html(?:\??)(.*)" value="/search.html?sourceid=shc&amp;source=clinical&amp;$1"/>
                            <entry key="/shc/oncology.html(?:\??)(.*)" value="/portals/internal-medicine.html?sourceid=shc&amp;source=/portals/internal-medicine.html&amp;$1"/>
                            <entry key="/shc/ophthalmology.html(?:\??)(.*)" value="/search.html?sourceid=shc&amp;source=clinical&amp;$1"/>
                            <entry key="/shc/orthopedics.html(?:\??)(.*)" value="/search.html?sourceid=shc&amp;source=clinical&amp;$1"/>
                            <entry key="/shc/psychiatry.html(?:\??)(.*)" value="/search.html?sourceid=shc&amp;source=clinical&amp;$1"/>
                            <entry key="/shc/pulmonary.html(?:\??)(.*)" value="/portals/pulmonary.html?sourceid=shc&amp;source=/portals/pulmonary.html&amp;$1"/>
                            <entry key="/shc/radiology.html(?:\?q=?)(.*)" value="http://www.guideline.gov/search/results.aspx?113=666&amp;term=$1"/>
                            <entry key="/shc/surgery-cardiothoracic.html(?:\??)(.*)" value="/search.html?sourceid=shc&amp;source=clinical&amp;$1"/>
                            <entry key="/shc/surgery-general.html(?:\??)(.*)" value="/search.html?sourceid=shc&amp;source=clinical&amp;$1"/>
                            <entry key="/shc/portals/shc.html(?:\??)(.*)" value="/portals/shc.html?sourceid=shc&amp;$1"/>
                        </map>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
</beans>
