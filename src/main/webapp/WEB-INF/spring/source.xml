<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    
    <bean id="edu.stanford.irt.cocoon.source.SourceResolver"
        class="edu.stanford.irt.laneweb.cocoon.LocationModifyingSourceResolver">
        <constructor-arg ref="edu.stanford.irt.cocoon.sitemap.ComponentFactory"/>
        <property name="sitemaps">
            <map>
                <entry key="content" value-ref="edu.stanford.irt.cocoon.sitemap.Sitemap/content"/>
                <entry key="apps" value-ref="edu.stanford.irt.cocoon.sitemap.Sitemap/applications"/>
                <entry key="eresources" value-ref="edu.stanford.irt.cocoon.sitemap.Sitemap/eresources"/>
                <entry key="rss" value-ref="edu.stanford.irt.cocoon.sitemap.Sitemap/rss"/>
                <entry key="mobile" value-ref="edu.stanford.irt.cocoon.sitemap.Sitemap/mobile"/>
                <entry key="classes" value-ref="edu.stanford.irt.cocoon.sitemap.Sitemap/classes"/>
                <entry key="bookmarks" value-ref="edu.stanford.irt.cocoon.sitemap.Sitemap/bookmarks"/>
            </map>
        </property>
        <property name="defaultResolver">
            <bean class="edu.stanford.irt.laneweb.cocoon.SpringResourceSourceResolver"/>
        </property>
        <lookup-method bean="edu.stanford.irt.cocoon.Model" name="getModel"/>
    </bean>

</beans>
