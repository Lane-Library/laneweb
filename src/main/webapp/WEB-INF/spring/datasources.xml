<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

    <bean name="javax.sql.DataSource/eresources" class="oracle.ucp.jdbc.PoolDataSourceFactory" factory-method="getPoolDataSource">
        <property name="connectionFactoryClassName" value="oracle.jdbc.pool.OracleDataSource"/>
        <property name="URL" value="%{edu.stanford.irt.laneweb.db.eresources.url}"/>
        <property name="user" value="%{edu.stanford.irt.laneweb.db.eresources.user}"/>
        <property name="password" value="%{edu.stanford.irt.laneweb.db.eresources.password}"/>
        <property name="initialPoolSize" value="%{edu.stanford.irt.laneweb.db.eresources.initialPoolSize}"/>
        <property name="maxPoolSize" value="%{edu.stanford.irt.laneweb.db.eresources.maxPoolSize}"/>
        <property name="minPoolSize" value="%{edu.stanford.irt.laneweb.db.eresources.minPoolSize}"/>
        <property name="oNSConfiguration" value="%{edu.stanford.irt.laneweb.db.eresources.onsConfiguration}"/>
        <property name="fastConnectionFailoverEnabled" value="%{edu.stanford.irt.laneweb.db.eresources.fastConnectionFailoverEnabled}"/>
    </bean>
    
    <bean name="javax.sql.DataSource/voyager" class="oracle.ucp.jdbc.PoolDataSourceFactory" factory-method="getPoolDataSource">
        <property name="connectionFactoryClassName" value="oracle.jdbc.pool.OracleDataSource"/>
        <property name="URL" value="%{edu.stanford.irt.laneweb.db.voyager.url}"/>
        <property name="user" value="%{edu.stanford.irt.laneweb.db.voyager.user}"/>
        <property name="password" value="%{edu.stanford.irt.laneweb.db.voyager.password}"/>
        <property name="initialPoolSize" value="%{edu.stanford.irt.laneweb.db.voyager.initialPoolSize}"/>
        <property name="maxPoolSize" value="%{edu.stanford.irt.laneweb.db.voyager.maxPoolSize}"/>
        <property name="minPoolSize" value="%{edu.stanford.irt.laneweb.db.voyager.minPoolSize}"/>
    </bean>
    
    <bean name="javax.sql.DataSource/grandrounds" class="oracle.ucp.jdbc.PoolDataSourceFactory" factory-method="getPoolDataSource">
        <property name="connectionFactoryClassName" value="oracle.jdbc.pool.OracleDataSource"/>
        <property name="URL" value="%{edu.stanford.irt.laneweb.db.grandrounds.url}"/>
        <property name="user" value="%{edu.stanford.irt.laneweb.db.grandrounds.user}"/>
        <property name="password" value="%{edu.stanford.irt.laneweb.db.grandrounds.password}"/>
        <property name="initialPoolSize" value="%{edu.stanford.irt.laneweb.db.grandrounds.initialPoolSize}"/>
        <property name="maxPoolSize" value="%{edu.stanford.irt.laneweb.db.grandrounds.maxPoolSize}"/>
        <property name="minPoolSize" value="%{edu.stanford.irt.laneweb.db.grandrounds.minPoolSize}"/>
    </bean>

    <beans profile="test">

        <bean name="javax.sql.DataSource/eresources" class="org.apache.commons.dbcp.BasicDataSource"
            destroy-method="close">
            <property name="driverClassName" value="oracle.jdbc.OracleDriver"/>
            <property name="url" value="%{edu.stanford.irt.laneweb.db.eresources.url}"/>
            <property name="username" value="%{edu.stanford.irt.laneweb.db.eresources.user}"/>
            <property name="password" value="%{edu.stanford.irt.laneweb.db.eresources.password}"/>
        </bean>
        
        <bean name="javax.sql.DataSource/voyager" class="org.apache.commons.dbcp.BasicDataSource"
            destroy-method="close">
            <property name="driverClassName" value="oracle.jdbc.OracleDriver"/>
            <property name="url" value="%{edu.stanford.irt.laneweb.db.voyager.url}"/>
            <property name="username" value="%{edu.stanford.irt.laneweb.db.voyager.user}"/>
            <property name="password" value="%{edu.stanford.irt.laneweb.db.voyager.password}"/>
        </bean>
        
        <bean name="javax.sql.DataSource/grandrounds" class="org.apache.commons.dbcp.BasicDataSource"
            destroy-method="close">
            <property name="driverClassName" value="oracle.jdbc.OracleDriver"/>
            <property name="url" value="%{edu.stanford.irt.laneweb.db.grandrounds.url}"/>
            <property name="username" value="%{edu.stanford.irt.laneweb.db.grandrounds.user}"/>
            <property name="password" value="%{edu.stanford.irt.laneweb.db.grandrounds.password}"/>
        </bean>

    </beans>

</beans>
