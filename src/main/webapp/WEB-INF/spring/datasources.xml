<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

    <bean name="javax.sql.DataSource/eresources" class="com.zaxxer.hikari.HikariDataSource" destroy-method="close">
        <constructor-arg>
            <bean class="com.zaxxer.hikari.HikariConfig">
                <property name="dataSourceClassName" value="org.postgresql.ds.PGSimpleDataSource"/>
                <property name="maximumPoolSize" value="%{edu.stanford.irt.laneweb.db.eresources.maxPoolSize}"/>
                <property name="initializationFailFast" value="false"/>
                <property name="connectionTimeout" value="5000"/>
                <property name="dataSourceProperties">
                    <props>
                        <prop key="url">%{edu.stanford.irt.laneweb.db.eresources.dataSource.url}</prop>
                        <prop key="user">%{edu.stanford.irt.laneweb.db.eresources.dataSource.user}</prop>
                        <prop key="password">%{edu.stanford.irt.laneweb.db.eresources.dataSource.password}</prop>
                    </props>
                </property>
            </bean>
        </constructor-arg>
    </bean>
    
    <bean name="javax.sql.DataSource/voyager" class="com.zaxxer.hikari.HikariDataSource" destroy-method="close">
        <constructor-arg>
            <bean class="com.zaxxer.hikari.HikariConfig">
                <property name="dataSourceClassName" value="oracle.jdbc.pool.OracleDataSource"/>
                <property name="maximumPoolSize" value="%{edu.stanford.irt.laneweb.db.voyager.maxPoolSize}"/>
                <property name="initializationFailFast" value="false"/>
                <property name="connectionTimeout" value="5000"/>
                <property name="dataSourceProperties">
                    <props>
                        <prop key="url">%{edu.stanford.irt.laneweb.db.voyager.dataSource.url}</prop>
                        <prop key="user">%{edu.stanford.irt.laneweb.db.voyager.dataSource.user}</prop>
                        <prop key="password">%{edu.stanford.irt.laneweb.db.voyager.dataSource.password}</prop>
                    </props>
                </property>
            </bean>
        </constructor-arg>
    </bean>
    
    <bean name="javax.sql.DataSource/grandrounds" class="com.zaxxer.hikari.HikariDataSource" destroy-method="close">
        <constructor-arg>
            <bean class="com.zaxxer.hikari.HikariConfig">
                <property name="dataSourceClassName" value="oracle.jdbc.pool.OracleDataSource"/>
                <property name="maximumPoolSize" value="%{edu.stanford.irt.laneweb.db.grandrounds.maxPoolSize}"/>
                <property name="initializationFailFast" value="false"/>
                <property name="connectionTimeout" value="5000"/>
                <property name="dataSourceProperties">
                    <props>
                        <prop key="url">%{edu.stanford.irt.laneweb.db.grandrounds.dataSource.url}</prop>
                        <prop key="user">%{edu.stanford.irt.laneweb.db.grandrounds.dataSource.user}</prop>
                        <prop key="password">%{edu.stanford.irt.laneweb.db.grandrounds.dataSource.password}</prop>
                    </props>
                </property>
            </bean>
        </constructor-arg>
    </bean>

    <beans profile="test">

        <bean name="javax.sql.DataSource/eresources" class="org.apache.commons.dbcp.BasicDataSource"
            destroy-method="close">
            <property name="driverClassName" value="oracle.jdbc.OracleDriver"/>
            <property name="url" value="%{edu.stanford.irt.laneweb.db.eresources.url}"/>
            <property name="username" value="%{edu.stanford.irt.laneweb.db.eresources.user}"/>
            <property name="password" value="%{edu.stanford.irt.laneweb.db.eresources.password}"/>
        </bean>
        
        <bean name="javax.sql.DataSource/voyager" class="org.apache.commons.dbcp.BasicDataSource"
            destroy-method="close">
            <property name="driverClassName" value="oracle.jdbc.OracleDriver"/>
            <property name="url" value="%{edu.stanford.irt.laneweb.db.voyager.url}"/>
            <property name="username" value="%{edu.stanford.irt.laneweb.db.voyager.user}"/>
            <property name="password" value="%{edu.stanford.irt.laneweb.db.voyager.password}"/>
        </bean>
        
        <bean name="javax.sql.DataSource/grandrounds" class="org.apache.commons.dbcp.BasicDataSource"
            destroy-method="close">
            <property name="driverClassName" value="oracle.jdbc.OracleDriver"/>
            <property name="url" value="%{edu.stanford.irt.laneweb.db.grandrounds.url}"/>
            <property name="username" value="%{edu.stanford.irt.laneweb.db.grandrounds.user}"/>
            <property name="password" value="%{edu.stanford.irt.laneweb.db.grandrounds.password}"/>
        </bean>

    </beans>

</beans>
