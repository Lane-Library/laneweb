<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean name="javax.sql.DataSource/eresources"
        class="org.springframework.jndi.JndiObjectFactoryBean">
        <property name="jndiName" value="java:comp/env/jdbc/eresources"/>
    </bean>

    <bean name="javax.sql.DataSource/voyager" class="org.springframework.jndi.JndiObjectFactoryBean">
        <property name="jndiName" value="java:comp/env/jdbc/voyager"/>
    </bean>

    <beans profile="test">

        <bean name="javax.sql.DataSource/eresources" class="org.apache.commons.dbcp.BasicDataSource"
            destroy-method="close">
            <property name="driverClassName" value="oracle.jdbc.OracleDriver"/>
            <property name="url" value="%{laneweb.context.eresources.url}"/>
            <property name="username" value="%{laneweb.context.eresources.username}"/>
            <property name="password" value="%{laneweb.context.eresources.password}"/>
        </bean>

        <bean name="javax.sql.DataSource/voyager" class="org.apache.commons.dbcp.BasicDataSource"
            destroy-method="close">
            <property name="driverClassName" value="oracle.jdbc.OracleDriver"/>
            <property name="url" value="%{laneweb.context.voyager.url}"/>
            <property name="username" value="%{laneweb.context.voyager.username}"/>
            <property name="password" value="%{laneweb.context.voyager.password}"/>
        </bean>

    </beans>

</beans>
