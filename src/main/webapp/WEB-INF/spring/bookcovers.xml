<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">
    
    <bean id="edu.stanford.irt.bookcovers.CompositeBookCoverService"
        class="edu.stanford.irt.bookcovers.CompositeBookCoverService">
        <constructor-arg>
            <list>
                <bean class="edu.stanford.irt.bookcovers.CacheBookCoverService">
                    <constructor-arg>
                        <bean class="java.util.concurrent.ConcurrentHashMap"/>
                    </constructor-arg>
                </bean>
                <bean class="edu.stanford.irt.bookcovers.DatabaseBookCoverService">
                    <constructor-arg ref="javax.sql.DataSource/eresources"/>
                </bean>
                <bean class="edu.stanford.irt.bookcovers.GoogleBookCoverService">
                    <constructor-arg>
                        <bean class="edu.stanford.irt.bookcovers.ISBNService">
                            <constructor-arg ref="javax.sql.DataSource/grandrounds"/>
                        </bean>
                    </constructor-arg>
                    <constructor-arg>
                        <bean class="com.google.api.client.http.javanet.NetHttpTransport"/>
                    </constructor-arg>
                    <constructor-arg>
                        <bean class="com.google.api.client.json.JsonObjectParser">
                            <constructor-arg>
                                <bean class="com.google.api.client.json.jackson2.JacksonFactory"/>
                            </constructor-arg>
                        </bean>
                    </constructor-arg>
                    <constructor-arg value="%{edu.stanford.irt.laneweb.bookcovers.google-api-key}"/>
                </bean>
            </list>
        </constructor-arg>
    </bean>
    
</beans>