<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    
    <bean name="edu.stanford.irt.laneweb.eresources.CollectionManager/history"
        class="edu.stanford.irt.laneweb.eresources.HistoryCollectionManager">
        <constructor-arg ref="javax.sql.DataSource/eresources"/>
        <constructor-arg>
            <bean class="org.springframework.beans.factory.config.PropertiesFactoryBean">
                <property name="location" value="classpath:edu/stanford/irt/laneweb/eresources/history-sql.properties"/>
            </bean>
        </constructor-arg>
    </bean>
    
    <bean name="edu.stanford.irt.cocoon.pipeline.Generator/history-search"
        class="edu.stanford.irt.laneweb.search.EresourcesSearchGenerator"
        scope="prototype">
        <constructor-arg ref="edu.stanford.irt.laneweb.eresources.CollectionManager/history"/>
        <constructor-arg ref="edu.stanford.irt.cocoon.xml.SAXStrategy/paging-search"/>
    </bean>
    
    <bean name="edu.stanford.irt.cocoon.pipeline.Generator/history-count"
        class="edu.stanford.irt.laneweb.eresources.EresourcesCountGenerator"
        scope="prototype">
        <constructor-arg>
            <set>
                <value>book</value>
                <value>movie</value>
                <value>serial</value>
                <value>graphic</value>
                <value>thesis</value>
                <value>object</value>
                <value>people</value>
                <value>organization</value>
                <value>article</value>
                <value>chapter</value>
                <value>event</value>
                <value>finding aid</value>
            </set>
        </constructor-arg>
        <constructor-arg ref="edu.stanford.irt.laneweb.eresources.CollectionManager/history"/>
    </bean>
    
</beans>
