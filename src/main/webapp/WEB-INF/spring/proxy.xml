<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">
    
    <bean id="edu.stanford.irt.laneweb.proxy.ProxyHostManager"
        class="edu.stanford.irt.laneweb.proxy.ProxyHostManager"
        destroy-method="destroy">
        <constructor-arg ref="javax.sql.DataSource/voyager"/>
    </bean>

    <bean name="edu.stanford.irt.cocoon.pipeline.Transformer/proxy-links"
        class="edu.stanford.irt.laneweb.proxy.HtmlProxyLinkTransformer"
        scope="prototype">
        <constructor-arg ref="edu.stanford.irt.laneweb.proxy.ProxyHostManager"/>
    </bean>
    
    <bean name="edu.stanford.irt.cocoon.pipeline.Transformer/search-proxy-links"
        class="edu.stanford.irt.laneweb.proxy.ElementProxyLinkTransformer"
        scope="prototype">
        <constructor-arg value="url"/>
    </bean>
    
    <bean class="edu.stanford.irt.laneweb.proxy.EzproxyServersWriter">
        <constructor-arg ref="javax.sql.DataSource/voyager"/>
        <constructor-arg>
            <bean class="org.springframework.beans.factory.config.PropertiesFactoryBean">
                <property name="location" value="classpath:edu/stanford/irt/laneweb/proxy/ezproxy-servers-sql.properties"/>
            </bean>
        </constructor-arg>
    </bean>
    
    <bean name="edu.stanford.irt.cocoon.sitemap.select.Selector/proxy-links"
        class="edu.stanford.irt.laneweb.proxy.ProxyLinkSelector"/>

</beans>
