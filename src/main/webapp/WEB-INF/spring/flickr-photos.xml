<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">
    
    <bean name="edu.stanford.irt.cocoon.pipeline.Generator/flickr-photo"
        class="edu.stanford.irt.laneweb.flickr.FlickrPhotoGenerator"
        scope="prototype">
        <constructor-arg ref="edu.stanford.irt.laneweb.flickr.FlickrPhotoListService"/>
        <constructor-arg>
            <bean class="edu.stanford.irt.laneweb.flickr.FlickrPhotoSAXStrategy"/>
        </constructor-arg>
    </bean>
    
    <bean id="edu.stanford.irt.laneweb.flickr.FlickrPhotoListService"
        class="edu.stanford.irt.laneweb.flickr.FlickrPhotoListService">
        <constructor-arg>
            <bean class="edu.stanford.irt.laneweb.flickr.FlickrPhotoList"/>
        </constructor-arg>
    </bean>
    
</beans>