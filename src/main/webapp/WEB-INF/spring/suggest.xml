<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    
    
    <bean name="edu.stanford.irt.suggest.SuggestionManager/eresource"
        class="edu.stanford.irt.suggest.EresourceSuggestionManager">
        <property name="collectionManager">
            <bean class="edu.stanford.irt.laneweb.suggest.EresourceCollectionManager">
                <property name="dataSource" ref="javax.sql.DataSource/eresources"/>
            </bean>
        </property>
    </bean>
    
    <bean name="edu.stanford.irt.suggest.SuggestionManager/history"
        class="edu.stanford.irt.suggest.EresourceSuggestionManager">
        <property name="collectionManager">
            <bean class="edu.stanford.irt.laneweb.suggest.HistoryCollectionManager">
                <property name="dataSource" ref="javax.sql.DataSource/eresources"/>
            </bean>
        </property>
    </bean>
    
    <bean name="edu.stanford.irt.suggest.SuggestionManager/mesh"
        class="edu.stanford.irt.suggest.MeshSuggestionManager"/>
    
    <bean name="edu.stanford.irt.suggest.SuggestionManager/extensions-suggest"
        class="edu.stanford.irt.laneweb.suggest.CompositeSuggestionManager">
        <property name="suggestionManagers">
            <list>
                <ref bean="edu.stanford.irt.suggest.SuggestionManager/eresource"/>
                <ref bean="edu.stanford.irt.suggest.SuggestionManager/mesh"/>
            </list>
        </property>
    </bean>
    
</beans>
