<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

    <bean name="edu.stanford.irt.laneweb.search.MetaSearchService"
        class="edu.stanford.irt.laneweb.search.MetaSearchService">
        <constructor-arg value="http://%{edu.stanford.irt.laneweb.metasearch.host}:%{edu.stanford.irt.laneweb.metasearch.port}"/>
        <constructor-arg ref="com.fasterxml.jackson.databind.ObjectMapper"/>
    </bean>    

    <bean name="edu.stanford.irt.cocoon.xml.SAXStrategy/paging-search"
        class="edu.stanford.irt.laneweb.search.saxstrategy.PagingSearchResultListSAXStrategy">
        <constructor-arg>
            <bean class="edu.stanford.irt.laneweb.search.saxstrategy.SearchResultSAXStrategy"/>
        </constructor-arg>
    </bean>
    
    <bean name="edu.stanford.irt.cocoon.xml.SAXStrategy/solr-paging-eresource-xml"
        class="edu.stanford.irt.laneweb.search.saxstrategy.SolrPagingEresourceSAXStrategy">
        <constructor-arg ref="edu.stanford.irt.cocoon.xml.SAXStrategy/eresource-xml"/>
    </bean>

    <bean name="edu.stanford.irt.cocoon.xml.SAXStrategy/result"
        class="edu.stanford.irt.laneweb.search.saxstrategy.MetasearchResultSAXStrategy">
        <constructor-arg>
            <bean class="edu.stanford.irt.laneweb.search.saxstrategy.EngineResultSAXStrategy">
                <constructor-arg>
                    <bean class="edu.stanford.irt.laneweb.search.saxstrategy.ResourceResultSAXStrategy">
                        <constructor-arg>
                            <bean class="edu.stanford.irt.laneweb.search.saxstrategy.AlternateContentResultSAXStrategy"/>
                        </constructor-arg>
                    </bean>
                </constructor-arg>
            </bean>
        </constructor-arg>
    </bean>
   
    <bean id="edu.stanford.irt.laneweb.search.ContentResultConversionStrategy"
        class="edu.stanford.irt.laneweb.search.ContentResultConversionStrategy">
        <constructor-arg>
            <bean class="edu.stanford.irt.laneweb.search.ScoreStrategy"/>
        </constructor-arg>
    </bean>
    
    <bean id="edu.stanford.irt.laneweb.search.AbstractSearchGenerator"
        class="edu.stanford.irt.laneweb.search.AbstractSearchGenerator"
        scope="prototype"
        abstract="true"/>
    
    <bean id="edu.stanford.irt.laneweb.search.AbstractMetasearchGenerator"
        class="edu.stanford.irt.laneweb.search.AbstractMetasearchGenerator"
        parent="edu.stanford.irt.laneweb.search.AbstractSearchGenerator"
        abstract="true">
        <constructor-arg index="0" ref="edu.stanford.irt.laneweb.search.MetaSearchService"/>
        <constructor-arg index="1" ref="edu.stanford.irt.cocoon.xml.SAXStrategy/result"/>
    </bean>

    <bean id="edu.stanford.irt.laneweb.search.ClinicalSearchResultsFactory"
        class="edu.stanford.irt.laneweb.search.ClinicalSearchResultsFactory">
        <constructor-arg ref="edu.stanford.irt.laneweb.search.ContentResultConversionStrategy"/>
    </bean>    

    <bean name="edu.stanford.irt.cocoon.pipeline.Generator/clinical-all"
        class="edu.stanford.irt.laneweb.search.ClinicalSearchResultsGenerator"
        scope="prototype">
        <constructor-arg ref="edu.stanford.irt.laneweb.search.MetaSearchService"/>
        <constructor-arg>
            <bean class="edu.stanford.irt.laneweb.search.saxstrategy.ClinicalSearchResultsSAXStrategy"/>
        </constructor-arg>
        <constructor-arg>
            <list>
                <value>aafp_patients</value>
                <value>acpjc</value>
                <value>bmj_clinical_evidence</value>
                <value>dynamed</value>
                <value>guideline_clearinghouse</value>
                <value>medlineplus</value>
                <value>pubmed</value>
                <value>pubmed_clinicaltrial</value>
                <value>pubmed_cochrane_reviews</value>
                <value>pubmed_cost</value>
                <value>pubmed_diagnosis_focused</value>
                <value>pubmed_epidemiology_focused</value>
                <value>pubmed_etiology_focused</value>
                <value>pubmed_harm_focused</value>
                <value>pubmed_prevention</value>
                <value>pubmed_prognosis_focused</value>
                <value>pubmed_qualityimprovement</value>
                <value>pubmed_rct</value>
                <value>pubmed_systematicreviews</value>
                <value>pubmed_treatment_focused</value>
                <value>uptodate</value>
            </list>
        </constructor-arg>
        <constructor-arg ref="edu.stanford.irt.laneweb.search.ClinicalSearchResultsFactory"/>
    </bean>
    
    <bean name="edu.stanford.irt.cocoon.pipeline.Generator/peds-all"
        class="edu.stanford.irt.laneweb.search.ClinicalSearchResultsGenerator"
        scope="prototype">
        <constructor-arg ref="edu.stanford.irt.laneweb.search.MetaSearchService"/>
        <constructor-arg>
            <bean class="edu.stanford.irt.laneweb.search.saxstrategy.ClinicalSearchResultsSAXStrategy"/>
        </constructor-arg>
        <constructor-arg>
            <list>
                <value>aafp_patients</value>
                <value>aappatient</value>
                <value>aapwebsite</value>
                <value>dynamed_allchild</value>
                <value>guideline_clearinghouse_allchild</value>
                <value>pubmed_allchild</value>
                <value>pubmed_clinicaltrial_allchild</value>
                <value>pubmed_cost_allchild</value>
                <value>pubmed_diagnosis_focused_allchild</value>
                <value>pubmed_epidemiology_focused_allchild</value>
                <value>pubmed_etiology_focused_allchild</value>
                <value>pubmed_harm_focused_allchild</value>
                <value>pubmed_peds_journals</value>
                <value>pubmed_prevention_allchild</value>
                <value>pubmed_prognosis_focused_allchild</value>
                <value>pubmed_qualityimprovement_allchild</value>
                <value>pubmed_rct_allchild</value>
                <value>pubmed_systematicreviews_allchild</value>
                <value>pubmed_treatment_focused_allchild</value>
                <value>uptodate_allchild</value>
            </list>
        </constructor-arg>
        <constructor-arg ref="edu.stanford.irt.laneweb.search.ClinicalSearchResultsFactory"/>
    </bean>

    <bean name="edu.stanford.irt.cocoon.pipeline.Generator/search-describe"
        class="edu.stanford.irt.laneweb.search.DescribeGenerator"
        parent="edu.stanford.irt.laneweb.search.AbstractMetasearchGenerator"/>

    <bean name="edu.stanford.irt.cocoon.pipeline.Generator/search"
        class="edu.stanford.irt.laneweb.search.SearchGenerator"
        parent="edu.stanford.irt.laneweb.search.AbstractMetasearchGenerator"/>
    
     <bean name="edu.stanford.irt.cocoon.pipeline.Generator/solr-search-facets"
        class="edu.stanford.irt.laneweb.search.SolrSearchFacetsGenerator"
         parent="edu.stanford.irt.laneweb.cocoon.AbstractMarshallingGenerator">
        <constructor-arg ref="edu.stanford.irt.laneweb.solr.SolrService"/>
        <property name="facetsToShowBrowse" value="20"/>
        <property name="facetsToShowSearch" value="4"/>
        <property name="meshToIgnoreInSearch">
            <list>
		        <value>nomesh</value>
		        <value>Adolescent</value>
		        <value>Adult</value>
		        <value>Aged</value>
		        <value>Aged, 80 and over</value>
		        <value>Animals</value>
		        <value>Cats</value>
		        <value>Cattle</value>
		        <value>Chick Embryo</value>
		        <value>Child</value>
		        <value>Child, Preschool</value>
		        <value>Cricetinae</value>
		        <value>Dogs</value>
		        <value>Female</value>
		        <value>Guinea Pigs</value>
		        <value>Humans</value>
		        <value>Infant</value>
		        <value>Infant, Newborn</value>
		        <value>Male</value>
		        <value>Mice</value>
		        <value>Middle Aged</value>
		        <value>Pregnancy</value>
		        <value>Rabbits</value>
		        <value>Rats</value>
		        <value>Young Adult</value>
            </list>
        </property>
        <property name="prioritizedPublicationTypes">
            <list>
                <value>Clinical Trial</value>
                <value>Randomized Controlled Trial</value>
                <value>Review</value>
                <value>Systematic Review</value>
            </list>
        </property>
    </bean>
    
    <bean name="edu.stanford.irt.cocoon.pipeline.Generator/er-search"
        class="edu.stanford.irt.laneweb.search.SolrSearchGenerator"
        parent="edu.stanford.irt.laneweb.search.AbstractSearchGenerator">
        <constructor-arg ref="edu.stanford.irt.laneweb.solr.SolrService"/>
        <constructor-arg ref="edu.stanford.irt.cocoon.xml.SAXStrategy/solr-paging-eresource-xml"/>
    </bean>

    <bean name="edu.stanford.irt.cocoon.pipeline.Generator/search-content"
        class="edu.stanford.irt.laneweb.search.ContentSearchGenerator"
        parent="edu.stanford.irt.laneweb.search.AbstractMetasearchGenerator">
        <constructor-arg index="1" ref="edu.stanford.irt.cocoon.xml.SAXStrategy/paging-search"/>
        <constructor-arg index="2" ref="edu.stanford.irt.laneweb.search.ContentResultConversionStrategy"/>
    </bean>
    
    <bean name="edu.stanford.irt.cocoon.pipeline.Generator/search-content-html"
        class="edu.stanford.irt.laneweb.search.ContentSearchGenerator"
        parent="edu.stanford.irt.laneweb.search.AbstractMetasearchGenerator">
        <constructor-arg index="1" ref="edu.stanford.irt.cocoon.xml.SAXStrategy/paging-search-html"/>
        <constructor-arg index="2" ref="edu.stanford.irt.laneweb.search.ContentResultConversionStrategy"/>
    </bean>

    <bean name="edu.stanford.irt.cocoon.pipeline.Generator/search-engine"
        class="edu.stanford.irt.laneweb.search.EngineSearchGenerator"
        parent="edu.stanford.irt.cocoon.pipeline.Generator/search"/>



    <bean name="edu.stanford.irt.cocoon.pipeline.Generator/search-resource"
        class="edu.stanford.irt.laneweb.search.ResourceSearchGenerator"
        parent="edu.stanford.irt.cocoon.pipeline.Generator/search"/>
    
    <bean name="edu.stanford.irt.cocoon.pipeline.Transformer/query-highlighting"
        class="edu.stanford.irt.laneweb.search.QueryHighlightingTransformer"
        scope="prototype">
    </bean>
    
    <bean name="edu.stanford.irt.cocoon.pipeline.Transformer/description-labeling"
        class="edu.stanford.irt.laneweb.search.DescriptionLabelTransformer"
        scope="prototype">
    </bean>
    
    <bean name="edu.stanford.irt.cocoon.pipeline.Transformer/search-directory"
        class="edu.stanford.irt.laneweb.search.SearchDirectoryTransformer"
        scope="prototype"/>
    
    <bean name="edu.stanford.irt.cocoon.pipeline.Transformer/file-path"
        class="edu.stanford.irt.laneweb.search.FilePathTransformer"
        scope="prototype">
        <constructor-arg ref="edu.stanford.irt.cocoon.source.SourceResolver"/>
        <constructor-arg ref="edu.stanford.irt.cocoon.xml.SAXParser/html"/>
    </bean>
</beans>
