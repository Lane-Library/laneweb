<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="edu.stanford.irt.laneweb.search.MetaSearchManagerSource"
        class="edu.stanford.irt.laneweb.search.MetaSearchManagerSource"
        destroy-method="dispose">
        <constructor-arg value="search-lane.xml"/>
    </bean>
    
    <bean id="edu.stanford.irt.laneweb.search.AbstractSearchGenerator"
        class="edu.stanford.irt.laneweb.search.AbstractSearchGenerator"
        scope="prototype"
        abstract="true"/>
    
    <bean id="edu.stanford.irt.laneweb.search.AbstractMetasearchGenerator"
        class="edu.stanford.irt.laneweb.search.AbstractMetasearchGenerator"
        parent="edu.stanford.irt.laneweb.search.AbstractSearchGenerator"
        abstract="true">
        <property name="metaSearchManagerSource"
            ref="edu.stanford.irt.laneweb.search.MetaSearchManagerSource"/>
    </bean>

    <bean name="org.apache.cocoon.generation.Generator/search-describe"
        class="edu.stanford.irt.laneweb.search.DescribeGenerator"
        parent="edu.stanford.irt.laneweb.search.AbstractMetasearchGenerator"/>

    <bean name="org.apache.cocoon.generation.Generator/search"
        class="edu.stanford.irt.laneweb.search.SearchGenerator"
        parent="edu.stanford.irt.laneweb.search.AbstractMetasearchGenerator">
        <property name="defaultTimeout" value="60000"/>
    </bean>
    
    <bean name="org.apache.cocoon.generation.Generator/er-search"
        class="edu.stanford.irt.laneweb.search.EresourcesSearchGenerator"
        parent="edu.stanford.irt.laneweb.search.AbstractSearchGenerator">
        <property name="collectionManager"
            ref="edu.stanford.irt.eresources.CollectionManager/laneconnex"/>
    </bean>

    <bean name="org.apache.cocoon.generation.Generator/search-content"
        class="edu.stanford.irt.laneweb.search.ContentSearchGenerator"
        parent="edu.stanford.irt.laneweb.search.AbstractMetasearchGenerator">
        <property name="defaultTimeout" value="20000"/>
        <property name="contentResultLimit" value="20"/>
    </bean>

    <bean name="org.apache.cocoon.generation.Generator/search-engine"
        class="edu.stanford.irt.laneweb.search.EngineSearchGenerator"
        parent="org.apache.cocoon.generation.Generator/search"/>

    <bean name="org.apache.cocoon.generation.Generator/search-resource"
        class="edu.stanford.irt.laneweb.search.ResourceSearchGenerator"
        parent="org.apache.cocoon.generation.Generator/search"/>
    
    <bean name="org.apache.cocoon.generation.Generator/merged-search"
        class="edu.stanford.irt.laneweb.search.MergedSearchGenerator"
        parent="edu.stanford.irt.laneweb.search.AbstractSearchGenerator">
        <property name="collectionManager"
            ref="edu.stanford.irt.eresources.CollectionManager/laneconnex"/>
        <property name="metaSearchManagerSource"
            ref="edu.stanford.irt.laneweb.search.MetaSearchManagerSource"/>
        <property name="defaultTimeout" value="20000"/>
        <property name="contentResultLimit" value="20"/>
    </bean>
    
    <bean name="org.apache.cocoon.generation.Generator/merged-history-search"
        class="edu.stanford.irt.laneweb.search.MergedSearchGenerator"
        parent="edu.stanford.irt.laneweb.search.AbstractSearchGenerator">
        <property name="collectionManager"
            ref="edu.stanford.irt.eresources.CollectionManager/history"/>
        <property name="metaSearchManagerSource"
            ref="edu.stanford.irt.laneweb.search.MetaSearchManagerSource"/>
        <property name="defaultTimeout" value="20000"/>
        <property name="contentResultLimit" value="20"/>
    </bean>
    
    <bean name="org.apache.cocoon.transformation.Transformer/query-highlighting"
        class="edu.stanford.irt.laneweb.search.QueryHighlightingTransformer"
        scope="prototype">
    </bean>
    
    <bean name="org.apache.cocoon.transformation.Transformer/description-labeling"
        class="edu.stanford.irt.laneweb.search.DescriptionLabelTransformer"
        scope="prototype">
    </bean>
    
    <bean name="org.apache.cocoon.transformation.Transformer/search-directory"
        class="edu.stanford.irt.laneweb.search.SearchDirectoryTransformer"
        scope="prototype"/>
    
    <bean name="org.apache.cocoon.transformation.Transformer/file-path"
        class="edu.stanford.irt.laneweb.search.FilePathTransformer"
        scope="prototype">
        <constructor-arg ref="org.apache.excalibur.source.SourceResolver"/>
    </bean>
</beans>
