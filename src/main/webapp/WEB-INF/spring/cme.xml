<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    
    <bean name="org.apache.cocoon.acting.Action/cme-redirect"
        class="edu.stanford.irt.laneweb.cme.CMERedirectAction"
        scope="prototype">
    </bean>
    
    <bean name="org.apache.cocoon.transformation.Transformer/search-cme-links"
        class="edu.stanford.irt.laneweb.cme.SearchResultCMELinkTransformer"
        scope="prototype">
    </bean>
    
    <bean name="org.apache.cocoon.transformation.Transformer/html-cme-links"
        class="edu.stanford.irt.laneweb.cme.HTMLCMELinkTransformer"
        scope="prototype">
    </bean>
    
    <bean name="org.apache.cocoon.selection.Selector/cme-links"
        class="edu.stanford.irt.laneweb.cme.CMELinkSelector"/>
    
</beans>