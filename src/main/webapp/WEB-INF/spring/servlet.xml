<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="javax.servlet.ServletContext"
        class="org.apache.cocoon.spring.configurator.impl.ServletContextFactoryBean"/>

    <bean name="org.apache.cocoon.processing.ProcessInfoProvider"
        class="org.apache.cocoon.processing.impl.ProcessInfoProviderImpl">
        <property name="servletContext" ref="servletContext"/>
    </bean>

    <bean id="org.apache.cocoon.configuration.Settings" class="edu.stanford.irt.laneweb.cocoon.Settings">
        <property name="tempDir">
            <bean class="org.springframework.web.context.support.ServletContextAttributeFactoryBean">
                <property name="attributeName" value="javax.servlet.context.tempdir"/>
            </bean>
        </property>
    </bean>
    
    <bean id="edu.stanford.irt.laneweb.servlet.ModelAugmentingRequestHandler"
        class="edu.stanford.irt.laneweb.servlet.ModelAugmentingRequestHandler"
        parent="edu.stanford.irt.laneweb.servlet.SitemapRequestHandler">
        <property name="dataBinder" ref="edu.stanford.irt.laneweb.servlet.binding.DataBinder/html"/>
    </bean>
    
    <bean id="edu.stanford.irt.laneweb.servlet.MobileRequestHandler"
        class="edu.stanford.irt.laneweb.servlet.MobileRequestHandler"
        parent="edu.stanford.irt.laneweb.servlet.SitemapRequestHandler">
        <property name="dataBinder" ref="edu.stanford.irt.laneweb.servlet.binding.DataBinder/mobile"/>
    </bean>
    
    <bean id="edu.stanford.irt.laneweb.servlet.SitemapRequestHandler"
        class="edu.stanford.irt.laneweb.servlet.SitemapRequestHandler">
        <property name="methodsNotAllowed">
            <set>
                <value>OPTIONS</value>
                <value>PROPFIND</value>
            </set>
        </property>
        <property name="redirectProcessor" ref="edu.stanford.irt.laneweb.servlet.redirect.RedirectProcessor"/>
        <property name="servletContext" ref="servletContext"/>
        <property name="processor" ref="org.apache.cocoon.Processor"/>
        <lookup-method bean="edu.stanford.irt.laneweb.model.Model" name="getModel"/>
    </bean>
    
</beans>
