<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="javax.servlet.ServletContext"
        class="org.apache.cocoon.spring.configurator.impl.ServletContextFactoryBean"/>

    <bean name="org.apache.cocoon.processing.ProcessInfoProvider"
        class="org.apache.cocoon.processing.impl.ProcessInfoProviderImpl">
        <property name="servletContext" ref="servletContext"/>
    </bean>

    <bean id="org.apache.cocoon.configuration.Settings" class="edu.stanford.irt.laneweb.cocoon.Settings">
        <property name="tempDir">
            <bean class="org.springframework.web.context.support.ServletContextAttributeFactoryBean">
                <property name="attributeName" value="javax.servlet.context.tempdir"/>
            </bean>
        </property>
    </bean>
    
    <bean id="org.apache.cocoon.el.objectmodel.ObjectModelProvider"
        class="edu.stanford.irt.laneweb.servlet.RequestAttributeObjectModelProvider"/>
    
    <bean id="edu.stanford.irt.laneweb.servlet.ModelAugmentingRequestHandler"
        class="edu.stanford.irt.laneweb.servlet.ModelAugmentingRequestHandler"
        parent="edu.stanford.irt.laneweb.servlet.SitemapRequestHandler">
        <property name="proxyLinks" ref="edu.stanford.irt.laneweb.servlet.ProxyLinks"/>
        <property name="templateChooser" ref="edu.stanford.irt.laneweb.servlet.TemplateChooser"/>
        <property name="LDAPDataAccess" ref="edu.stanford.irt.laneweb.ldap.LDAPDataAccess"/>
        <property name="ezproxyKey">
            <!-- TODO: get this from servlet context . . .-->
            <bean class="org.springframework.jndi.JndiObjectFactoryBean">
                <property name="jndiName" value="java:comp/env/ezproxy-key"/>
            </bean>
        </property>
    </bean>
    
    <bean id="edu.stanford.irt.laneweb.servlet.MobileRequestHandler"
        class="edu.stanford.irt.laneweb.servlet.MobileRequestHandler"
        parent="edu.stanford.irt.laneweb.servlet.ModelAugmentingRequestHandler">
        <property name="proxyLinks">
            <bean class="edu.stanford.irt.laneweb.servlet.MobileProxyLinks"
                parent="edu.stanford.irt.laneweb.servlet.ProxyLinks"/>
        </property>
    </bean>
    
    <bean id="edu.stanford.irt.laneweb.servlet.SitemapRequestHandler"
        class="edu.stanford.irt.laneweb.servlet.SitemapRequestHandler">
        <property name="methodsNotAllowed">
            <set>
                <value>OPTIONS</value>
                <value>PROPFIND</value>
            </set>
        </property>
        <property name="redirectProcessor">
            <bean class="edu.stanford.irt.laneweb.servlet.RedirectProcessor">
                <property name="redirectMap">
                    <map>
                        <!-- had to add NOT question mark because some proxy urls end with slash -->
                        <entry key="((?!.*\\?.*).*)/" value="$1/index.html"/>
                        <entry key="(.*)/classes/index\.html" value="$1/services/workshops/laneclasses.html"/>
                        <entry key="(.*)/clinician/index\.html" value="$1/portals/clinical.html"/>
                        <entry key="(.*)/index\.html\?template=shc(.*)" value="$1/index\.html\?sourceid=shc$2"/>
                        <entry key="(.*)/services/index\.html" value="$1/newpage.html?page=$1/about/index.html"/>
                        <entry key="(.*)/(?:content|rss)/page2rss\?page=/services/workshops/laneclasses\.html" value="$1/newpage.html?page=$1/rss/page2rss?page=/classes-consult/laneclasses\.html"/>
                        <entry key="(.*)/services/workshops/laneclasses\.html" value="$1/newpage.html?page=$1/classes-consult/laneclasses.html"/>
                        <entry key="(.*)/howto/index\.html\?id=48" value="$1/newpage.html?page=$1/about/hours-directions.html"/>
                        <entry key="(.*)/contacts/index\.html\?loadTab=askus" value="$1/newpage.html?page=$1/help/ask-us.html"/>
                        <entry key="((?!.*/about.*).*)/contacts/(.*)" value="$1/newpage.html?page=$1/about/contacts/$2"/>
                        <entry key="(.*)/online/(.*)browse\.html(.*)" value="$1/newpage.html?page=$1/biomed-resources/$2.html$3"/>
                        <entry key="(.*)/online/(.*)" value="$1/newpage.html?page=$1/biomed-resources/$2"/>
                        <entry key="(.*)/portals/bassett/(.*)" value="$1/newpage.html?page=$1/biomed-resources/bassett/$2"/>
                        <entry key="((?!.*/(?:biomed-resources|raw).*).*)/bassett/(.*)" value="$1/newpage.html?page=$1/biomed-resources/bassett/$2"/>
                        <entry key="(.*)/portals/history/index\.html" value="$1/newpage.html?page=$1/med-history/index.html"/>
                        <entry key="(.*)/(?:content|rss)/page2rss\?page=/portals/emgrandrounds\.html" value="$1/newpage.html?page=$1/rss/page2rss?page=/biomed-resources/emgrandrounds\.html"/>
                        <entry key="(.*)/(?:content|rss)/page2rss\?page=/portals/medgrandrounds\.html" value="$1/newpage.html?page=$1/rss/page2rss?page=/biomed-resources/medgrandrounds\.html"/>
                        <entry key="(.*)/(?:content|rss)/page2rss\?page=/portals/pedsgrandrounds\.html" value="$1/newpage.html?page=$1/rss/page2rss?page=/biomed-resources/pedsgrandrounds\.html"/>
                        <entry key="(.*)/rss/services/tools/highly-accessed-articles\.xml" value="$1/newpage.html?page=$1/rss/highly-accessed-articles.xml"/>
                        <entry key="(.*)/portals/emgrandrounds\.html" value="$1/newpage.html?page=$1/biomed-resources/emgrandrounds.html"/>
                        <entry key="(.*)/portals/medgrandrounds\.html" value="$1/newpage.html?page=$1/biomed-resources/medgrandrounds.html"/>
                        <entry key="(.*)/portals/pedsgrandrounds\.html" value="$1/newpage.html?page=$1/biomed-resources/pedsgrandrounds.html"/>
                        <entry key="(.*)/search\.html\?source=all&amp;(.*)" value="$1/newpage.html?page=$1/search\.html\?source=all-all%26$2"/>
                        <entry key="(.*)/search\.html\?source=(ej|database|book|software|video|cc|lanesite)&amp;(.*)" value="$1/newpage.html?page=$1/search\.html\?source=catalog-$2%26$3"/>
                        <entry key="(.*)/search\.html\?source=(clinical|history)&amp;(.*)" value="$1/newpage.html?page=$1/search\.html\?source=$2-all%26$3"/>
                        <entry key="(.*)/search\.html\?source=research&amp;(.*)" value="$1/newpage.html?page=$1/search\.html\?source=bioresearch-all%26$2"/>
                        <entry key="(.*)/search\.html\?source=peds&amp;(.*)" value="$1/newpage.html?page=$1/portals\/peds\.html\?$2"/>
                        <entry key="(.*)/local/(antibiogram(?:LPCH)?)/(.*)" value="$1/newpage.html?page=$1/biomed-resources/$2/$3"/>
                    </map>
                </property>
            </bean>
        </property>
        <property name="servletContext" ref="servletContext"/>
        <property name="processor" ref="org.apache.cocoon.Processor"/>
    </bean>

    <bean id="edu.stanford.irt.laneweb.servlet.ProxyLinks"
        class="edu.stanford.irt.laneweb.servlet.ProxyLinks">
        <property name="proxyRegex">
            <list>
                <!-- VPN 171.65.16.0 - 171.65.31.255 -->
                <value>^171\.66\.(?:1[6-9]|2[0-9]|3[0-1])\.\S+</value>
                <!-- hospital 171.65.44.0 - 171.65.44.255 -->
                <value>^171\.65\.44\.\S+</value>
                <!-- hospital 171.65.125.0 - 171.65.125.255 -->
                <value>^171\.65\.125\.\S+</value>
                <!-- hospital 171.65.128.0 - 171.65.199.255 -->
                <value>^171\.65\.1(?:2[8-9]|[3-9][0-9])\.\S+</value>
                <!-- hospital 171.65.200.0 - 171.65.255.255 -->
                <value>^171\.65\.2[0-5][0-9]\.\S+</value>
            </list>
        </property>
        <property name="noProxyRegex">
            <list>
                <value>^171\.6[4-7]\.\S+</value>
                <!-- campus wireless 10.32.0.0 through 10.33.255.255 -->
                <value>^10\.3[2-3]\.\S+</value>
                <!-- library wireless 10.39.32.1 through 10.39.47.255 -->
                <value>^10\.39\.(?:3[2-9]|4[0-7])\.\S+</value>
            </list>
        </property>
    </bean>

    <bean id="edu.stanford.irt.laneweb.servlet.TemplateChooser"
        class="edu.stanford.irt.laneweb.servlet.TemplateChooser">
        <constructor-arg value="template"/>
        <constructor-arg>
            <map>
                <entry key="^(?:/\w+|)/biomed-resources/bassett/raw/bassettLargerView.html" value="bassettLargerView"
                />
                <entry key="^(?:/\w+|)/m/(?:.*)" value="mobile"/>
            </map>
        </constructor-arg>
    </bean>
    
</beans>
