<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    
    <bean name="edu.stanford.irt.laneweb.servlet.binding.DataBinder/bookmark"
        class="edu.stanford.irt.laneweb.bookmarks.BookmarkDataBinder">
        <property name="bookmarkDAO" ref="edu.stanford.irt.laneweb.bookmarks.BookmarkDAO"/>
    </bean>
    
    <bean name="edu.stanford.irt.cocoon.pipeline.Generator/bookmark"
        class="edu.stanford.irt.laneweb.bookmarks.BookmarkGenerator"
        parent="edu.stanford.irt.laneweb.cocoon.AbstractMarshallingGenerator"/>
    
    <bean name="edu.stanford.irt.cocoon.sitemap.select.Selector/action"
        class="edu.stanford.irt.laneweb.bookmarks.ActionSelector"/>
    
    <bean name="edu.stanford.irt.laneweb.bookmarks.BookmarkDAO"
        class="edu.stanford.irt.laneweb.bookmarks.SQLBookmarkDAO">
        <constructor-arg ref="javax.sql.DataSource/eresources"/>
        <constructor-arg>
            <bean class="org.slf4j.LoggerFactory" factory-method="getLogger">
                <constructor-arg type="java.lang.Class" value="edu.stanford.irt.laneweb.bookmarks.SQLBookmarkDAO"/>        
            </bean>
        </constructor-arg>
    </bean>
    
</beans>
