<?xml version="1.0" encoding="UTF-8"?>
<Context clearReferencesThreadLocals="true">

   <Resource name="jdbc/nihPortal" auth="Container"
        type="javax.sql.DataSource"
        driverClassName="org.gjt.mm.mysql.Driver"
        url="${nihPortal.context.url}"
        username="${nihPortal.context.username}"
        password="${nihPortal.context.password}"
        maxActive="${nihPortal.context.maxActive}"
        maxIdle="${nihPortal.context.maxIdle}"
        maxWait="${nihPortal.context.maxWait}"/>
   
        <Environment name="nihPortal-ezproxy-key"   type="java.lang.String"
        value="${nihPortal.context.ezproxy-key}"/>
</Context>
