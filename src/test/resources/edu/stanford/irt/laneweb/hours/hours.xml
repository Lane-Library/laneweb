<?xml version="1.0" encoding="UTF-8"?>
<calendars xmlns="http://lane.stanford.edu/hours/1.0">
    <!-- NOTE: how "today's hours" are calculated 
            <date> elements are checked; if one matches today's date, the <description> element is returned.
            if no <date> element matches today's date, <label> elements are checked to see if today's day of the week (e.g. Monday) matches a <label> element
            this means exceptions to regular hours must have <date> elements and "regular" days must not have <date> elements
            <date> formatting: three character month SPACE day. e.g. Jan 2 -->
    <calendar>
        <day>
            <label>Monday</label>
            <date>Feb 6</date>
            <description>9:00 am - 6:00 pm</description>
        </day>
        <day>
            <label>Tuesday</label>
            <date>Feb 7</date>
            <description>9:00 am - 6:00 pm</description>
        </day>
        <day>
            <label>Wednesday</label>
            <date>Feb 8</date>
            <description>9:00 am - 6:00 pm</description>
        </day>
        <day>
            <label>Thursday</label>
            <date>Feb 9</date>
            <description>2/9 hours</description>
        </day>
        <day>
            <label>Friday</label>
            <date>Feb 10</date>
            <description>A special someone's birthday?</description>
        </day>
        <day>
            <label>Saturday</label>
            <date>Feb 11</date>
            <description>CLOSED</description>
        </day>
        <day>
            <label>Sunday</label>
            <date>Feb 12</date>
            <description>CLOSED</description>
        </day>
    </calendar>
    <calendar title="Regular Hours">
        <day>
            <label>Monday</label>
            <description>Just an average Monday</description>
        </day>
        <day>
            <label>Tuesday</label>
            <description>8:00 am - 10:00 pm</description>
        </day>
        <day>
            <label>Wednesday</label>
            <description>8:00 am - 10:00 pm</description>
        </day>
        <day>
            <label>Thursday</label>
            <description>8:00 am - 10:00 pm</description>
        </day>
        <day>
            <label>Friday</label>
            <description>8:00 am - 8:00 pm</description>
        </day>
        <day>
            <label>Saturday</label>
            <description>10:00 am - 8:00 pm</description>
        </day>
        <day>
            <label>Sunday</label>
            <description>12:00 pm - 12:00 am</description>
        </day>
    </calendar>
</calendars>